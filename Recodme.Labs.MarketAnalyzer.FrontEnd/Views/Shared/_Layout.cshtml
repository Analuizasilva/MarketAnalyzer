<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] MarketAnalyzer</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />


    @RenderSection("head", false)
</head>
<body>
    <header class="_container">
        <div class="header" id="myHeader">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  box-shadow mb-3" style="background-color: #242c42">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img width="230" src="~/images/LogoMarketAnalyser.svg" />
                    </a>
                    <button class="navbar-toggler" style="background-color:#86bc42" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </div>

        @*__Banner__*@
        <div id="jumbotron" class="jumbotron jumbotron-fluid" style="max-height: 200px !important;
        background-color:#3E517A; background-size:100% 100%; min-height: 200px !important; font-family: Lato, sans-serif; display: none">
            <div class="container">
                <table>
                    <tr>
                        <div class="text">
                            <div class="social">
                                <h4 style="font-weight:600; color:#fff">Register now</h4>
                                <a href="#" class="entypo-dribbble"></a>
                                <a href="#" class="entypo-twitter"></a>
                                <a href="#" class="entypo-facebook"></a>
                                <a href="#" class="entypo-gplus"></a>
                                <a href="#" class="entypo-linkedin"></a>
                                <a href="#" class="entypo-paper-plane"></a>
                            </div>

                            <h2 class="rw-sentence" style="font-size:30px !important;">
                                <span style="color:#9eed3e; font-weight:600;">MarketAnalyzer gives you &hellip; </span>
                                <div class="rw-words rw-words-1">
                                    <span style="color:white">Top USA companies</span>
                                    <span style="color:#00b1ff">the best companies to invest</span>
                                    <span style="color:#ffbb00">latest stock data</span>
                                    <span>customization <i class="entypo-heart"></i></span>

                                </div>
                            </h2>
                        </div>

                    </tr>

                </table>




            </div>
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer" style="background-color: #242c42">
        <div class="container" style="color:#86bc42">
            &copy; 2020 - MarketAnalyzer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        const url = window.location.href;
        var path = /([^\/]+$)/i;
        var result = url.match(path);

        if (!result) document.getElementById("jumbotron").style.display = "block";
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
