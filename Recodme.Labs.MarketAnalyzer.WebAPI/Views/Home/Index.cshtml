@model Recodme.Labs.MarketAnalyzer.WebAPI.Models.Home.IndexViewModel

<h1>
    Top 2000 Companies in USA
</h1>

<table class="table table-hover" id="listTable">
    <thead>
        <tr>
            <th class="w-1 no-sort"></th>
            <th class="w-1">@Html.DisplayNameFor(item => item.HomeDataPocos.FirstOrDefault().MarketAnalyzerRank)</th>
            <th class="w-1">@Html.DisplayNameFor(item => item.HomeDataPocos.FirstOrDefault().CompanyName)</th>
            <th class="w-1">@Html.DisplayNameFor(item => item.HomeDataPocos.FirstOrDefault().Ticker)</th>
            <th class="w-1">@Html.DisplayNameFor(item => item.HomeDataPocos.FirstOrDefault().Forbes2000Rank)</th>
            <th class="w-1">@Html.DisplayNameFor(item => item.HomeDataPocos.FirstOrDefault().Fitness)</th>
            <th class="no-sort"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HomeDataPocos)
        {
        <tr>
            <td></td>
            <td>
                <a asp-action="Details" asp-route-id="@item.MarketAnalyzerRank"> @item.MarketAnalyzerRank </a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CompanyName">@item.CompanyName</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Ticker">@item.Ticker</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Forbes2000Rank">@item.Forbes2000Rank</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Fitness">@item.Fitness</a>
            </td>
        </tr>
        }
    </tbody>
</table>
